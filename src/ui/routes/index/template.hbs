<section class="hero is-primary">
  <h1 class="title">
    Ember Octane Demo | Life Log
  </h1>
</section>
<section class="section">
  <div class="container">
    <NoteInput @addNote={{action addNote}} name="add-note" value={{inputValue}}/>
  </div>
</section>
<section class="section">
  {{notes.length}}
  {{#each notes as |note|}}
    <Note @content={{note}} />
  {{/each}}
</section>